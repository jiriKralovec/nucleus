{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "lib/*": [ "src/*" ]
    }
  },
  "include": [ "src" ],
  "exclude": [ "node_modules", "**/*.spec.*" ]
}